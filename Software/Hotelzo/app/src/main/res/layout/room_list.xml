<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recyclerViewRooms"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"

    >

    <include
        android:id="@+id/top_bar_back"
        layout="@layout/top_bar_back"></include>

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/recycler_view_rooms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:clipToPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="0.1dp"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bar_back"
        tools:listitem="@layout/room_list_item" />

</androidx.constraintlayout.widget.ConstraintLayout>